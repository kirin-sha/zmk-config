#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {
    chosen {
        zmk,physical-layout = &hontonopage_physical_layout;
    };
    
    hontonopage_physical_layout: hontonopage_physical_layout {
        compatible = "zmk,physical-layout";
        display-name = "Default";
        transform = <&default_transform>;
        kscan = <&kscan0>;

        keys  //                     w   h    x    y     rot    rx    ry
            = <&key_physical_attrs 100 100  200    0       0     0     0>
            , <&key_physical_attrs 100 100    0  100       0     0     0>
            , <&key_physical_attrs 100 100  100  100       0     0     0>
            , <&key_physical_attrs 100 100  200  100       0     0     0>
            , <&key_physical_attrs 100 100  200  200       0     0     0>
            ;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";

        // 5本の input-gpios = 5行 × 1列 のマトリクス
        columns = <1>;
        rows = <5>;
        // RC(row, col) の row が input-gpios の並びと対応
        map = <
            RC(0, 0)   // pos 0（上）
            RC(1, 0)   // pos 1（左）
            RC(2, 0)   // pos 2（下）
            RC(3, 0)   // pos 3（右）
            RC(4, 0)   // pos 4（中央）
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-direct";
        label = "KSCAN";
        wakeup-source;
        // 並び順＝スキャン順＝ポジション0..4
        input-gpios =
            <&xiao_d 7  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  // pos 0（上）
            <&xiao_d 10 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  // pos 1（左）
            <&xiao_d 2  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  // pos 2（下）
            <&xiao_d 1  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>,  // pos 3（右）
            <&xiao_d 3  (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>;  // pos 4（中央）
    };
	    soft_off_wakers {
        compatible = "zmk,soft-off-wakeup-sources";
        wakeup-sources = <&kscan0>;
    };

/* encoder0 node is now provided by the QDEC hardware (&qdec0). See bottom of file. */

    sensors: sensors {
        compatible = "zmk,keymap-sensors";
        sensors = <&encoder0>;
        triggers-per-rotation = <6>;
    };
 
    aliases {
        led-red = &led0;
        led-green = &led1;
        led-blue = &led2;
    };

    leds {
        compatible = "gpio-leds";
        status = "okay";
        led0: led_0 {
            gpios = <&gpio0 26 GPIO_ACTIVE_LOW>;  // red LED, connected to P0.26
        };
        led1: led_1 {
            gpios = <&gpio0 30 GPIO_ACTIVE_LOW>;  // green LED, connected to P0.30
        };
        led2: led_2 {
            gpios = <&gpio0 6 GPIO_ACTIVE_LOW>;  // blue LED, connected to P0.06
        };
    };
};

&pinctrl {
    qdec_default: qdec_default {
        group1 {
            /* Xiao BLE の D9 = P1.14, D8 = P1.13 を QDEC A/B に割り当て */
            psels = <NRF_PSEL(QDEC_A, 1, 14)>,
                    <NRF_PSEL(QDEC_B, 1, 13)>;
            bias-pull-up;
        };
    };
};

/* NRFX QDEC ハードウェアを encoder0 として使う（ラベル名はそのまま） */
encoder0: &qdec0 {
    status = "okay";
    led-pre = <0>;
    steps = <12>;     /* Ano encoder: 12 pulses / rotation */
    pinctrl-0 = <&qdec_default>;
    pinctrl-names = "default";
};
